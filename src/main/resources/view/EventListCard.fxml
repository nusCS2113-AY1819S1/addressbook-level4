<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="eventCardPane" fx:id="eventCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="15" prefWidth="400" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="eventId" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="eventName" text="\$name" styleClass="cell_big_label" />
      </HBox>
      <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
      <Label fx:id="eventLocation" styleClass="cell_small_label" text="\$eventLocation" />
      <Label fx:id="eventDate" styleClass="cell_medium_label" text="\$eventDate" />
      <Label fx:id="startTime" styleClass="cell_medium_label" text="\$startTime" />
      <Label fx:id="endTime" styleClass="cell_medium_label" text="\$endTime" />
    </VBox>
  </GridPane>
</HBox>
